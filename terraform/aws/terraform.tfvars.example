# ============================================
# Terraform Variables Example for AWS
# Copy this file to terraform.tfvars and fill in your values
# ============================================

aws_region  = "eu-west-1"
environment = "production"

# EC2 Configuration
key_name                = "your-ssh-key-name"
manager_instance_type   = "t3.large"    # 2 vCPU, 8 GB RAM
worker_instance_type    = "t3.xlarge"   # 4 vCPU, 16 GB RAM
worker_count            = 2
admin_cidr              = "0.0.0.0/0"   # Restrict this to your IP

# RDS PostgreSQL (Optional)
use_rds           = false                # Set to true to use RDS instead of container
db_instance_class = "db.t3.large"       # 2 vCPU, 8 GB RAM
db_name           = "hosting_db"
db_username       = "hosting_user"
db_password       = "change-me-in-production"

# ElastiCache Redis (Optional)
use_elasticache   = false                # Set to true to use ElastiCache instead of container
redis_node_type   = "cache.t3.medium"   # 2 vCPU, 3.09 GB RAM
